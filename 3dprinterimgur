# load up the modules

from PIL import Image
from PIL import ImageFont
from PIL import ImageDraw 
from PIL import PSDraw
import os
import time
import re
import datetime
import json
import requests
from imgurpython import ImgurClient



client_id = '41e6d47c5d4502b'
client_secret = 'f8c8eb19c4b50f3f7d02f6d7a9120e0507089193'
access_token = '0e291e869c074343a84a539f9647ee93cbe2dfe6'
refresh_token = '7c3e7206c0d043d50ebaaf13177eb069821bd40f'
capture_path = 'OctoPrint/captures/'
webcam_url = 'ultimaker.local:8080/?action=snapshot'
watermarktext = 'Helsinki Hacklab - Ultimaker Webcam'

client = ImgurClient(client_id, client_secret, access_token, refresh_token)



ts = time.time()
ts = str(datetime.datetime.fromtimestamp(ts).strftime('%d-%m-%Y.%H:%M:%S'))

#os.system('wget -O ' + capture_path + 'printer-' + ts +'.jpg ' + webcam_url)

myimage = Image.open(capture_path + 'printer-' + ts +'.jpg')
myimage.load()
draw = ImageDraw.Draw(myimage)
draw.rectangle((640, 460, 0, 480), fill='black')
draw.text((300, 465), watermarktext + ' ' + ts, fill='White')
myimage.save(capture_path + 'printer-' + ts +'.jpg')

imgurconfig = {
		'album': 'yBb1P',  #original = zWUTp   #test = yBb1P
		'name':  'Ultimaker capture at ' + ts,
		'title': 'Ultimaker capture at ' + ts,
		'description': 'Helsinki hacklab\'s Ultimaker 3D printer webcam captured at ' + ts
	}

imgurdata = client.upload_from_path(capture_path + 'printer-' + ts +'.jpg', config=imgurconfig, anon=False)
link = str(imgurdata['link'])
link + ' ' + ts
imgurconfig = 0

os.system('rm OctoPrint/captures/printer-' + ts +'.jpg')
